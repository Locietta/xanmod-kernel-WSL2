+		DXG_ERR("ioctl callback is NULL %x", code);
+		return -ENOTTY;
+	}
+	if (ioctls[code].ioctl != p1) {
+		DXG_ERR("ioctl mismatch. Code: %x User: %x Kernel: %x",
